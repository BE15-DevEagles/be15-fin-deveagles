# Environment Variables Example
# Copy this file to .env and modify for your environment

# Environment
ANALYTICS_ENVIRONMENT=development

# Database URLs (required for staging/production)
ANALYTICS_CRM_DATABASE_URL=mysql+pymysql://readonly_user:password@mariadb:3306/beautifly
ANALYTICS_SCHEDULER_JOBSTORE_URL=sqlite:///data/scheduler.db

# Security (required for production)
ANALYTICS_SECRET_KEY=your-super-secret-key-change-this-in-production-123456789

# External Services
ANALYTICS_WORKFLOW_SERVICE_URL=http://workflow-service:8080
ANALYTICS_NOTIFICATION_WEBHOOK_URL= <YOUR/WEBHOOK/URL>

# Optional Overrides
# ANALYTICS_HOST=0.0.0.0
# ANALYTICS_PORT=8000
# ANALYTICS_DEBUG=false
# ANALYTICS_LOG_LEVEL=INFO

# Local Development Only
# ANALYTICS_LOCAL_DEV_AUTO_RELOAD_TEMPLATES=true
# ANALYTICS_LOCAL_DEV_ENABLE_DEBUG_TOOLBAR=true
# ANALYTICS_LOCAL_DEV_MOCK_EXTERNAL_APIS=true 