{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Create PR from Issue",
      "type": "shell",
      "command": "./scripts/create-pr.sh",
      "args": ["${input:issueNumber}", "${input:additionalDesc}"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "issueNumber",
      "description": "이슈 번호를 입력하세요",
      "type": "promptString"
    },
    {
      "id": "additionalDesc",
      "description": "추가 설명 (선택사항)",
      "type": "promptString"
    }
  ]
}
